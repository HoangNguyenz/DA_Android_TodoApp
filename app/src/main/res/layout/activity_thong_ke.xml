<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="10dp"
    android:background="@drawable/background"
    tools:context=".ThongKeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10pt"
        android:layout_marginBottom="5pt"
        android:gravity="center"
        android:text="THỐNG KÊ"
        android:textSize="35sp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20pt"
        android:gravity="center"
        android:text="SỐ LƯỢNG CÔNG VIỆC TỪNG THÁNG"
        android:textSize="21sp"
        android:textColor="@color/white"/>

    <NumberPicker
        android:id="@+id/yearPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <Button
        android:layout_width="150pt"
        android:layout_height="wrap_content"
        android:text="Thống kê theo biểu đồ cột"
        android:textSize="20sp"
        android:id="@+id/btnColChart"
        android:layout_marginBottom="5pt"
        android:padding="10dp"/>

    <Button
        android:layout_width="150pt"
        android:layout_height="wrap_content"
        android:text="Thống kê theo biểu đồ đường"
        android:textSize="20sp"
        android:id="@+id/btnLineChart"
        android:padding="10dp"
        android:layout_marginBottom="30pt"/>

</LinearLayout>